<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_marginTop="7sp"
    android:layout_marginBottom="7sp">

    <LinearLayout
        android:id="@+id/layoutE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_border_os"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:layout_marginLeft="50sp"
        android:backgroundTint="@color/blue_clair"
        android:layout_marginRight="7sp">
        <TextView
            android:id="@+id/contenue_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour Miss comment tu va ? "
            android:textSize="16sp"
            android:textColor="@color/noir" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/operateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange Cam"
                android:layout_marginTop="5sp"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/heure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:34"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/msg_envoye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_done"
                android:layout_marginLeft="5sp"/>
            <ImageView
                android:id="@+id/msg_recue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_done_all"
                android:layout_marginLeft="5sp"/>
            <ImageView
                android:id="@+id/echec_envoie_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_error"
                android:layout_marginLeft="5sp"
                android:background="@color/transparant"/>
            <ProgressBar
                android:id="@+id/envoi_en_cour"
                android:layout_width="20sp"
                android:layout_height="20sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/selectionMsgEnv"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@mipmap/icon_muutiple_selection"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>