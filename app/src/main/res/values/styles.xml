<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textAppearance">@color/dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:listDividerAlertDialog">@color/dark</item>
        <item name="android:popupElevation" tools:ignore="NewApi">6dp</item>
    </style>
    <!--    No action bar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--    App bar theme-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="iconTint">@color/tintIconActionBar</item>
        <item name="iconTintMode">@color/tintIconActionBar</item>
        <item name="colorControlNormal">@color/color_icon_overlay</item>
        <item name="android:textColor">@color/darkActionBar</item>
    </style>
    <style name="AppTheme.ProfileAppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="colorPrimary">@color/bg_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:textAppearance">@color/dark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="iconEndPadding">5dp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>
    <!--    Popup app bar-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
    <!--    Fullscreen theme-->
    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <!--    Fullscreen action bar theme-->
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
<!--    Circular image-->
    <style name="circleImageView" parent="AppTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
